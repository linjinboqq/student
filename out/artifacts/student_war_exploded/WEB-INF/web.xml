    </servlet>
    <servlet-mapping>
        <servlet-name>delect</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>select</servlet-name>
        <servlet-class>main.java.com.edu.lin.controller.SelectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>select</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>main.java.com.edu.lin.controller.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
