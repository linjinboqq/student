    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>main.java.com.edu.lin.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
